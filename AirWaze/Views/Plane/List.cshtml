@{
}
@model List<PlaneListViewModel> 

<div class="container-fluid" style="padding: 0 0 0 0;">
    <div class="row">
        <div class="col-lg-2 bg-dark-blue d-none d-sm-block" style="padding-top: 50px; padding-bottom: 20px;">

            <div class="list-group text-left font-weight-bold" style="padding-top: 30px;">  
                <a class="list-group-item" asp-action="ListAllRoles" asp-controller="Role">Manage roles</a>
                <a class="list-group-item" asp-action="List" asp-controller="Airline">Manage airlines</a>
                <a class="list-group-item" asp-action="List" asp-controller="Plane">Manage planes</a>
                <a class="list-group-item" asp-action="Index" asp-controller="Flight">Manage flights</a> 
                <a class="list-group-item" asp-action="Schedule" asp-controller="Admin">Manage schedule</a>                
            </div>
        </div>
        <div class="col-lg-9" style="padding-bottom: 50px;">
            <div>
                <h1>Manage planes</h1>
                <h1 style="color:red;">Hallo Admin</h1>
    
                @if (Model.Count != 0)
                {       
                    <h1>Overview Planes:</h1>  

                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Capacity</th>
                                <th>Region</th>
                                <th>Available</th>
                                <th>Manufacturer</th>
                                <th>Type</th>
                                <th>Airliner</th>
                                <th>ConstructionYear</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>            
                            @foreach (var plane in Model)
                            {
                                <tr>
                                    <td>@plane.PlaneNr</td>
                                    <td>@plane.PassengerCapacity</td>                       
                                    <td>@plane.FlightRegion</td>
                                    <td>@plane.IsAvailable</td>
                                    <td>@plane.Manufacturer</td>
                                    <td>@plane.Type</td>   
                                    <td>@plane.CurrentAirline.NameTag</td>
                                    <td>@plane.ConstructionYear</td>
                                    <td><a class="btn btn-primary" asp-action="Detail" asp-controller="Plane" asp-route-ID=@plane.PlaneNr>Detail</a></td>
                                    <td><a class="btn btn-secondary" asp-action="Update" asp-controller="Plane" asp-route-ID=@plane.PlaneNr>Edit</a></td>
                                    <td><a class="btn btn-secondary" asp-action="Delete" asp-controller="Plane" asp-route-ID=@plane.PlaneNr>Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h1>No Planes Currently Available</h1>
                }
        <div style="margin:100px;">
            <a class="btn btn-secondary" asp-area="" asp-controller="Plane" asp-action="Type" style="margin-left:250px;width:600px;">Create New Plane</a>
        </div> 
   
        </div>
        </div>
</div>



