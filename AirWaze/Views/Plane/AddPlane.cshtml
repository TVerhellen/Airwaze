@{
}
@model PlaneCreateViewModel

<form asp-controller="Plane" asp-action="Create" method="post">
    <div class="form-group" hidden="hidden">
        <label asp-for="Type"></label>
        <input class ="form-control" asp-for="Type" />
        <span class="text-danger" asp-validation-for="Type"></span>
    </div>
    
    <div class="form-group" hidden="hidden">
        <label asp-for="Manufacturer" ></label>
        <input class ="form-control" asp-for="Manufacturer" />
        <span class="text-danger" asp-validation-for="Manufacturer"></span>
    </div>
    <div class="form-group"  hidden="hidden">
        <label asp-for="SeatDiagramPic" ></label>
        <input class ="form-control" asp-for="SeatDiagramPic" />
        <span class="text-danger" asp-validation-for="SeatDiagramPic"></span>
    </div>
    <div class="form-group">
        <label asp-for="PassengerCapacity"></label>
        <input class ="form-control" asp-for="PassengerCapacity" />
        <span class="text-danger" asp-validation-for="PassengerCapacity"></span>
    </div>    
    <div class="form-group">
        <label asp-for="FuelCapacity"></label>
        <input class ="form-control" asp-for="FuelCapacity" />
        <span class="text-danger" asp-validation-for="FuelCapacity"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstClassCapacity"></label>
        <input class ="form-control" asp-for="FirstClassCapacity" />
        <span class="text-danger" asp-validation-for="FirstClassCapacity"></span>
    </div>
    <div class="form-group">
        <label asp-for="LoadCapacity"></label>
        <input class ="form-control" asp-for="LoadCapacity" />
        <span class="text-danger" asp-validation-for="LoadCapacity"></span>
    </div>
    <div class="form-group">
        <label asp-for="FuelUsagePerKM"></label>
        <input class ="form-control" asp-for="FuelUsagePerKM" />
        <span class="text-danger" asp-validation-for="FuelUsagePerKM"></span>
    </div>
    <div class="form-group">
        <label asp-for="FlightRegion"></label>
        <input class ="form-control" asp-for="FlightRegion" />
        <span class="text-danger" asp-validation-for="FlightRegion"></span>
    </div>
   
       <div class="form-group">
        <input asp-for="IsAvailable"/>
        <label asp-for="IsAvailable">Currently Available and Ready to Rock?</label>
    
    </div>
    

    <button class="btn btn-secondary" type="submit" style="margin-top:50px;margin-left:40%;width:400px;">Create</button> 
</form>