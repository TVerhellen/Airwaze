
@using AirWaze.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AirWazeUser> SignInManager
@inject UserManager<AirWazeUser> UserManager
<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <div>
    <li >
    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit">Logout</button>
        </form>
    </li>
    </div>
}
else
{
    <div>
        <li> <i class="fa fa-user"></i></li>
        <li>
            <a text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </div>
}
</ul>




   
