@model ContactViewModel
@{
    ViewData["Title"] = "Contact";
}
<h1>Contact us</h1>

<form asp-controller="Contact" asp-action="Index" method="post">
    <div class="form-group">
       <label asp-for="Name">Name:</label> </br>
       <input type="text" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Mail:</label></br>
        <input type="text" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject">Subject:</label></br>
        <input type="text" asp-for="Subject" />
        <span class="text-danger" asp-validation-for="Subject"></span>
    </div> 
    <div class="form-group">
        <label asp-for="Message">Message:</label></br>
        <textarea asp-for="Message"></textarea>
        <span class="text-danger" asp-validation-for="Message"></span>
    </div>    

    <button class="btn btn-primary" type="submit">Send</button></br>
</form>





