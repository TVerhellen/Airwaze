@{
}

@model TicketPaymentViewModel

<main>
<h1>Payment</h1>
<p>Destination: @Model.CurrentFlight.Destination</p>
<p>Departure: @Model.CurrentFlight.Departure</p>
<p>First Class: @if (Model.FirstClass) { <p>yes</p> } else { <p>no</p> }
<p>Extra Luggage: @if (Model.ExtraLuggage) { <p>yes</p> } else { <p>no</p> }
<h2>Total Price: € @Model.Price</h2>

<a class="btn btn-primary" asp-action="ConfirmedPayment" asp-route-ID="@Model.TicketNr">Pay Now</a>
<a class="btn btn-primary" asp-action="Edit" asp-route-ID="@Model.TicketNr">Change Ticket</a>
<a class="btn btn-danger" asp-action="Delete" asp-route-ID="@Model.TicketNr">Abort</a>
</main>