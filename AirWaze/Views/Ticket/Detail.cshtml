@{
}
@model TicketDetailViewModel
<head>
    <link rel="stylesheet" href="~/css/Tijs.css" asp-append-version="true" />
</head>
<main>
    <div class="slider-height d-flex align-items-center">
        <div class="listContainer">
<h1>Ticket @Model.TicketNr</h1>
<p>Name: @Model.LastName @Model.FirstName</p>
<p>Destination: @Model.CurrentFlight.Destination.Name</p>
<p>Departure: @Model.CurrentFlight.Departure</p>
<p>Airline: @Model.CurrentFlight.CurrentPlane.CurrentAirline.Name</p>
<p>Seat: @Model.Seat</p>
@if (Model.FirstClass)
    {
        <p>Class: First Class</p>
    }
    else
    {
        <p>Class: Economy</p>
    }
@if (Model.ExtraLuggage)
    {
        <p>Extra Luggage: Yes</p>
    }
    else
    {
        <p>Extra Luggage: No</p>
    }
<p>Price: @Model.Price</p>

<a class="btn btn-primary" asp-controller="Ticket" asp-action="List">Return</a>
<a class="btn btn-primary" asp-controller="Ticket" asp-action="Edit" asp-route-ID="@Model.TicketNr">Change Passenger Information</a>
<a class="btn btn-danger" asp-controller="Ticket" asp-action="Delete" asp-route-ID="@Model.TicketNr">Delete</a>
</div></div>
</main>

