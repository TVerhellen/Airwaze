@{
}
@model TicketFlightPickerViewModel

<table>
    <tr>
        <th>Destination</th>
        <th>Departure time</th>
    </tr>
    @foreach (var flight in Model.flightList)
    {
        <tr>
            <td>@flight.Destination</td>
            <td>@flight.Departure</td>
            <td><a asp-action="Payment" asp-route-ID="@flight.FlightNr" asp-route-ticket="@Model.TicketNr">Select</a></td>
        </tr>
    }
</table>
<a class="btn btn-primary" asp-action="Create">Go Back</a>
