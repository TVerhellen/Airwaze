@{
}
@model TicketDeleteViewModel
<head>
    <link rel="stylesheet" href="~/css/Tijs.css" asp-append-version="true" />
</head>
<div class="filler"></div>
<main>
    <div class="slider-height d-flex align-items-top">
        <div class="listContainer">
<h1>Cancelling your ticket</h1>
<h2>Ticket Information</h2>
<p>Name: @Model.LastName @Model.FirstName</p>
<p>Flight Destination: @Model.CurrentFlight.Destination.Name</p>
<p>Flight Departure: @Model.CurrentFlight.Departure</p>

<a class="btn btn-danger" onclick="message()" asp-action="ConfirmedDelete" asp-route-ID="@Model.TicketNr">Cancel Ticket</a>
<a class="btn btn-primary" asp-action="List">Go Back</a>
</div>
</div>
</main>
<script type="text/javascript">
        function message()
        {
            Swal.fire({                   
                    position: 'center',
                    icon: 'error',
                    title: 'Ticket Deleted',
                    showConfirmButton: false,
                    timer: 1500                 
                    });
        }
    </script>