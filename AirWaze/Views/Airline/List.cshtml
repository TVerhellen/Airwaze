@{
}
<head>
    <link rel="stylesheet" href="~/css/customstyle.css" asp-append-version="true" />
</head>

@model List<AirlineListViewModel>

<div>
    <h1 style="color:red;">VOOR AIRPORT/ADMIN AUTH ONLY</h1>
    
    @if (Model.Count != 0)
    {
        <h1>Overzicht Airlines:</h1>  

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>NameTag</th>
                    
                    <th>Logo</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>            
                @foreach (var airline in Model)
                {
                    <tr>
                        <td>@airline.Name</td>
                        <td>@airline.NameTag</td>                                             
                        <td>
                            <img src="@Url.Content(@airline.Logo)" alt="Sample Image" width="100" height="100" />
                        </td>
                        <td><a class="btn btn-primary" asp-action="Detail" asp-controller="Airline" asp-route-ID=@airline.AirlineID>Detail</a></td>
                        <td><a class="btn btn-secondary" asp-action="Update" asp-controller="Airline" asp-route-ID=@airline.AirlineID>Edit</a></td>
                        <td><a class="btn btn-secondary" asp-action="Delete" asp-controller="Airline" asp-route-ID=@airline.AirlineID>Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>No Airlines Currently Available</h1>
    }
    <div style="margin:100px;">
 <a class="btn btn-secondary" asp-area="" asp-controller="Airline" asp-action="Create" style="margin-left:250px;width:600px;">Create New Airline</a>
  </div> 

</div>