                    <div class="col-lg-12" >
                        <div class="section-tittle text-center mb-80">
                            <span>Hello Admin, </span>
                            <h2>Overview Airlines</h2>
                        </div>
                    </div>
                </div>
                 @if (Model.Count != 0)
                {
                    <div class="row">
                        @foreach (var airline in Model)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="single-location mb-30">
                                    <div class="location-img">
                                        <img src="@Url.Content(@airline.Logo)" alt="" width="100" height="300" >
                                    </div>
                                    <div class="location-details">
                                        <p>@airline.Name</p>
                                        <a class="genric-btn success-border circle" asp-action="Detail" asp-controller="Airline" asp-route-ID=@airline.AirlineID>Detail</a>
                                        <a class="genric-btn info-border circle" asp-action="Update" asp-controller="Airline" asp-route-ID=@airline.AirlineID>Edit</a>
                                        <a class="genric-btn warning-border circle" asp-action="Delete" asp-controller="Airline" asp-route-ID=@airline.AirlineID>Delete</a>

                                    </div>
                                </div>
                            </div>
                        }                
                    </div>
                }
                else
                {
                    <h1>No Airlines Currently Available</h1>
                }
        <div style="margin:20px;">
                <a class="genric-btn primary e-large" asp-area="" asp-controller="Airline" asp-action="Create" style="margin-left:250px;width:600px;">Create New Airline</a>
            </div> 
            </div>
        </div>
</body>
