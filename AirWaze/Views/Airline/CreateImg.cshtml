@{
}
@model AirlineCreateViewModel

    <form asp-controller="Airline" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class ="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="NameTag"></label>
        <input class ="form-control" asp-for="NameTag" />
        <span class="text-danger" asp-validation-for="NameTag"></span>
    </div>
    <div class="form-group">
        <label asp-for="CompanyNumber"></label>
        <input class ="form-control" asp-for="CompanyNumber" />
        <span class="text-danger" asp-validation-for="CompanyNumber"></span>
    </div>    
    <div class="form-group">
        <label asp-for="Adress"></label>
        <input class ="form-control" asp-for="Adress" />
        <span class="text-danger" asp-validation-for="Adress"></span>
    </div>
    <div class="form-group">
        <label asp-for="Number"></label>
        <input class ="form-control" asp-for="Number" />
        <span class="text-danger" asp-validation-for="Number"></span>
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <input class ="form-control" asp-for="City" />
        <span class="text-danger" asp-validation-for="City"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class ="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input class ="form-control" asp-for="PhoneNumber" />
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="AccountNumber"></label>
        <input class ="form-control" asp-for="AccountNumber" />
        <span class="text-danger" asp-validation-for="AccountNumber"></span>
    </div>
     @if (@Model.Logo != null)
    {             
        <div class="form-group">         
        <input class="form-control" asp-for="Logo" hidden="hidden"/>
        <div style="padding-top:20px;">
        @if(@Model.Logo != ""){
            <img src="@Url.Content(@Model.Logo)" alt="Sample Image" width="200"/>           
        }
        </div>
        </div>
    }
    <button class="btn btn-secondary" onclick="message()" type="submit" style="margin-top:50px;margin-left:40%;width:400px;">Create</button> 
</form>
<script type="text/javascript">
        function message()
        {
            Swal.fire({                   
                    position: 'center',
                    icon: 'success',
                    title: 'Airline Created',
                    showConfirmButton: false,
                    timer: 1500                   
                    });
        }
    </script>