@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All roles";
}

<h1>All roles</h1>

<a class="btn btn-primary mb-2" asp-action="AddRole"><i class="fa-solid fa-users"></i> Add role</a>

@if (Model.Any())
{
    <table class="table col-4">
        <thead>
            <tr>
                <td><h5>Role</h5></td>
                <td></td>
            </tr>
        </thead>
        @foreach (var role in Model)
        {
            <tbody>
                <tr>
                    <td>@role.Name</td>
                    <td class="text-center">
                        <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i>Edit</a>
                        <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i>Delete</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
}
else
{
    <h5>No roles yet, use the button above to add your first role.</h5>
}