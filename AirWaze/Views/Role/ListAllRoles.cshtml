@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All roles";
}

<div class="container-fluid" style="padding: 0 0 0 0;">
    <div class="row">
        <div class="col-lg-2 bg-dark-blue d-none d-sm-block" style="padding-top: 50px; padding-bottom: 20px;">
            <center><i class="fas fa-user fa-5x text-white" style="padding-bottom: 20px;"></i></center>   
            <center>
                    <p style="color:white">@User.Identity.Name</p>
            </center>
            

                <div class="list-group text-left font-weight-bold" style="padding-top: 30px;">
                    <a class="list-group-item" asp-action="Index" asp-controller="Admin"><i class="fas fa-tachometer-alt text-white"> &nbsp; Dashboard</i></a>
                    <a class="list-group-item" asp-action="ListAllRoles" asp-controller="Role"><i class="fas fa-user text-white"> &nbsp; Manage roles</i></a>
                    <a class="list-group-item" asp-action="List" asp-controller="Airline"><i class="fa fa-user-check text-white">&nbsp; Airlines</i></a>
                    <a class="list-group-item" asp-action="List" asp-controller="Plane"><i class="fa fa-plane text-white"></i>&nbsp; Planes</i></a>
                    <a class="list-group-item" asp-action="Index" asp-controller="Flight"><i class="fa fa-plane-departure text-white">&nbsp; Flights</i></a> 
                    <a class="list-group-item" asp-action="Schedule" asp-controller="Admin"><i class="fa fa-clock text-white">&nbsp; Schedule</i></a>  
                </div>
        </div>
    <div class="col-lg-9" style="padding-bottom: 50px;">
           <h1>Manage roles</h1>
           </br>
           <a class="btn btn-primary mb-2" asp-action="AddRole">Add role</a>
           </br>
            @if (Model.Any())
            {
                <table class="table col-4">
                <thead>
                    <tr>
                       <td><h5>Role</h5></td>
                        <td></td>
                    </tr>
                </thead>
                @foreach (var role in Model)
                {
                    <tbody>
                        <tr>
                            <td>@role.Name</td>
                            <td class="text-center">
                                <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                                <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    </tbody>
                }
                </table>
            }
            else
            {
                <h5>No roles yet, use the button to add your first role.</h5>
            }
         </div>
    </div>
</div>

<script src="~/lib/bootstrap/bootstrap-admin/popper.min.js"></script>
<link href="~/lib/bootstrap/bootstrap-admin/bootstrap-parkeasy.css" rel="stylesheet" />
<link href="~/lib/bootstrap/bootstrap-admin/dashboard.css" rel="stylesheet" />




