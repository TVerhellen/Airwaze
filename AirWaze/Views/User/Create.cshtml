@{
}

@model UserCreateViewModel

<form asp-controller="User" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="LastName">Lastname</label>
        <input class="form-control" asp-for="LastName"/>
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName">Firstname</label>
        <input class="form-control" asp-for="FirstName"/>
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email"/>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phonenumber</label>
        <input class="form-control" asp-for="PhoneNumber"/>
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div> 
    <div class="form-group">
        <label asp-for="StreetName">Streetname</label>
        <input class="form-control" asp-for="StreetName"/>
        <span class="text-danger" asp-validation-for="StreetName"></span>
    </div>
    <div class="form-group">
        <label asp-for="HouseNumber">Housenumber</label>
        <input class="form-control" asp-for="HouseNumber"/>
        <span class="text-danger" asp-validation-for="HouseNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bus">Bus</label>
        <input class="form-control" asp-for="Bus"/>
        <span class="text-danger" asp-validation-for="Bus"></span>
    </div>
    <div class="form-group">
        <label asp-for="Zipcode">Zipcode</label>
        <input class="form-control" asp-for="Zipcode"/>
        <span class="text-danger" asp-validation-for="Zipcode"></span>
    </div>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input class="form-control" asp-for="City"/>
        <span class="text-danger" asp-validation-for="City"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country">Country</label>
        <input class="form-control" asp-for="Country"/>
        <span class="text-danger" asp-validation-for="Country"></span>
    </div>  

    <button class="btn btn-primary" type="submit">Create User</button>
</form>
