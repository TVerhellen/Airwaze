@model List<FlightListViewModel>



<h1>Flight Landing Page</h1>
<br />
<a class="btn btn-primary" asp-controller="Flight" asp-action="Create">Add New Flight</a>
<br />
<h2>All Flights</h2>

@if (@Model.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Time</th>
                <th scope="col">Destination</th>
                <th scope="col">Flight Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in @Model)
            {
                <tr>
                    <td>@x.Departure.Date.ToString("D")</td>
                    <td>@x.Departure.Hour.ToString("00"):@x.Departure.Minute.ToString("00")</td>
                    <td>@x.Destination</td>     
                    <td>@x.FlightNr</td>
                    <td><a class="btn btn-primary" asp-controller="Flight" asp-action="Detail" asp-route-id="@x.FlightNr">Details</a></td>
                    <td><a class="btn btn-primary" asp-controller="Flight" asp-action="Edit" asp-route-id="@x.FlightNr">Edit</a></td>
                    <td><a class="btn btn-primary" asp-controller="Flight" asp-action="Delete" asp-route-id="@x.FlightNr">Delete</a></td>
                </tr>

                <!-- Show Status if not 0 -->
            }
            
        </tbody>
    </table>
}
else
{
    <p>No flights planned at the moment.</p>
}
