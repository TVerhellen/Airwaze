        <main>
        <div class="col-lg-9" style="padding-bottom: 50px;margin-top: 200px">
            <br />
            <a class="btn btn-primary" asp-controller="Flight" asp-action="Create">Add New Flight</a>
            <br />
            <br />
            @*searchfunction*@
                <form asp-action="Index" method="get">
                    <div class="form-actions no-color">
                        <p>
                            Search by: &nbsp;
                            @Html.RadioButton("option", "Destination") Destination &nbsp;
                            @Html.RadioButton("option", "Date") Date &nbsp; &nbsp;
                        <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" /> &nbsp;
                        <input class="btn btn-primary" type="submit" value="Search"/> &nbsp;
                        <a href="/Flight/Index" class="btn btn-primary">Show all flights</a> 
                        </p>
                    </div>
                </form>
                <br/>
            <br />
            <h2>Flights</h2>

            @if (@Model.Count != 0)
            {
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Time</th>
                            <th scope="col">Destination</th>
                            <th scope="col">Flight Number</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var x in @Model)
                    {
                        <tr class="rounded">
                            <td>@x.Departure.Date.ToString("D")</td>
                            <td>@x.Departure.Hour.ToString("00"):@x.Departure.Minute.ToString("00")</td>
                            <td>@x.Destination.Name</td>     
                            <td>@x.FlightNr</td>
                            @switch (x.Status)
                            {
                                case 0:
                                    <td>Awaiting Approval</td>
                                    break;
                                case 1:
                                    <td>Approved</td>
                                    break;
                                case 2:
                                    <td>Delayed</td>
                                    break;
                                case 3:
                                    <td>Boarding</td>
                                    break;
                                case 4:
                                    <td>Departed</td>
                                    break;
                                case 5:
                                    <td>Arrived</td>
                                    break;
                                case 6:
                                    <td>Cancelled</td>
                                    break;
                                default:
                                    break;
                            }
                            <td><a class="btn btn-primary" asp-controller="Flight" asp-action="Detail" asp-route-id="@x.FlightNr">Details</a></td>
                            @if(x.Status == 0 || x.Status == 1 || x.Status == 2 || x.Status == 3)
                            {
                                <td><a class="btn btn-primary" asp-controller="Flight" asp-action="Edit" asp-route-id="@x.FlightNr">Edit</a></td>
                                <td><a class="btn btn-primary" asp-controller="Flight" asp-action="Delete" asp-route-id="@x.FlightNr">Delete</a></td>
                            }
                        </tr>
                    }
            
                    </tbody>
                </table>
            }
            else
            {
                <p>No flights planned at the moment.</p>
            }
        </div>
    </main>
