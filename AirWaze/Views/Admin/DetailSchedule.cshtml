@using AirWaze.Models
@using AirWaze.Controllers
@model ScheduleGenerateViewModel

@{
    int flightCounter = 1;
}

<link rel="stylesheet" href="~/css/flightindex.css">

<div class="hero-area2  slider-height2 hero-overly2 d-flex align-items-center " style="background-image: url(../Images/controltower.jpg)">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center pt-50">
                            <h2>Schedule Details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />

<h1 style="font-weight: bolder">Schedule for @Model.Date.ToString("D") - @Model.Date.Hour.ToString("00") : @Model.Date.Minute.ToString("00")</h1>

        @foreach(var flight in @Model.Flights)
        {
            <h2 style="margin-left: 0;">@flightCounter: @Model.Flights[flightCounter-1].Departure.ToString("dd/MM/yyyy hh:mm") - @Model.Flights[flightCounter-1].FlightNr - @Model.Flights[flightCounter-1].Destination.Name</h2>
            flightCounter++;
        }       

<br />
<br />
@if(AdminController.scheduleToApprove == null)
{
    <a class="btn btn-danger active" asp-controller="Admin" asp-action="ListSchedules">Go Back</a>
}
else
{
    <a class="btn btn-danger active" asp-controller="Admin" asp-action="Schedule">Go Back</a>
}
