
@model ScheduleGenerateViewModel

@{
    string currentTime = DateTime.Now.ToString("d") + "T" + DateTime.Now.ToString("hh:MM");
}

<link rel="stylesheet" href="~/css/flightindex.css">

<div class="hero-area2  slider-height2 hero-overly2 d-flex align-items-center ">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center pt-50">
                            <h2>Generate New Schedule</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />

<form asp-controller="Admin" asp-action="GenerateSchedule" method="post">
    <div class="form-group">
        <label>Date and Time:</label>
        <input type="datetime-local" min="@DateTime.Now" max="@DateTime.Now.AddDays(30)" class="form-control" asp-for="Date"/>
        <span asp-validation-for="Date"></span>
    </div>
    <button class="btn btn-primary" type="submit">Create New Schedule</button>
</form>

<a class="btn btn-primary" asp-controller="Admin" asp-action="Schedule">Go Back</a>
